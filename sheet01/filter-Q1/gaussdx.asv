function [D, x] = gaussdx(sigma)
    dim = 6*sigma+1;
    dim2= 3 * sigma;
    x = zeros(dim,dim,2);
    G = zeros(dim,dim);
    
    for i=1:dim
       for j=1:dim
        x(i,j,1) = i-dim2-1;
        x(i,j,2) = j-dim2-1;
        % Assumption: Total derivative is used => sum of partial
        % derivatives
        G(i,j) = 1.0 / (sqrt(2 * pi) * sigma) * exp(-(x(i,j,1)*x(i,j,1) + x(i,j,2)*x(i,j,2)) / (2 * sigma * sigma));
       end 
    end
end